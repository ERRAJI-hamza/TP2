doctype html
html
  head
    title Registration and Authentication
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css")
  body(class="bg-gray-100 p-4")
    div(class="p-4 bg-white border border-gray-300 rounded-lg mb-4")
      p(class="text-xl font-bold" id="userName") #{userName}
    div(class="p-4 bg-white border border-gray-300 rounded-lg mb-1")
        h2(class="text-lg font-semibold mt-4") Books:
    div(class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4")
      each book in books
        div(class="p-4 bg-white border border-gray-300 rounded-lg")
          h2(class="text-lg font-semibold") Title: #{book.title}
          p(class="mt-2") Type: #{book.type}
          p(class="mt-2") Page: #{book.page}
